<div class="mx-auto max-w-7xl flex justify-center items-center h-screen">
    <div class="sm:mx-auto sm:w-full sm:max-w-md ">
        <div class="bg-gray21 py-8 px-4 shadow sm:rounded-lg sm:px-10"> 
            <div class="mb-4">
                <h1 class="m-0 text-center font-bold tracking-tight text-5xl text-white">Hello</h1>
                <h4 class="text-center mt-0 text-white">We're happy to see you again</h4>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="mb-4">
                <%= f.label :email, class: "block text-sm font-medium text-white" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@email.com", class: "mt-1 p-2 w-full rounded-md border border-gray-300 shadow-md shadow-gray-900/10 "%>
            </div>
             <div class="mb-4">
                <%= f.label :password, class: "block text-sm font-medium text-white" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 p-2 w-full rounded-md border border-gray-300 shadow-md shadow-gray-900/10 " %>
            </div>
             <div class="mb-4 pt-2">
                <%= f.submit "Submit", class: "w-full bg-gradient rounded-big focus:ring-4 focus:outline-none focus:ring-blue-300 text-white font-bold text-xl py-2.5 shadow-md shadow-gray-900/10" %>
             </div>
            <% end %>
              <div class="text-sm text-center text-white pt-6">
                New to Trading? <%= link_to "Sign up",new_trader_registration_path, class: "txt-bg no-underline font-bold text-white hover:underline" %>
              </div>
              <div class="text-sm text-center text-white pt-2">
                Admin? <%= link_to "Login as Admin",new_admin_session_path, class: "no-underline font-bold text-white hover:underline" %>
              </div>
        </div>
        </div>
</div>