    <span class="md:inline-block">Portfolio</span>
  <% end %>
</li>
<li>
  <%= link_to stocks_path, class: 'block px-4 py-2 hover:rounded hover:bg-hover' do %>
    <i class="fa-solid fa-chart-line mr-2"></i>
    <span class="md:inline-block">Stocks</span>
  <% end %>
</li>
