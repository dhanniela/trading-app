<%= form_tag(trader_trader_dashboard_path, method: :post) do %>
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag 'amount', 'Deposit Amount' %>
    <%= number_field_tag 'amount', nil, step: "0.01" %>
  </div>

  <div class="actions">
    <%= submit_tag "Deposit" %>
  </div>
<% end %>
