<div class="w-full px-8 h-screen">

<div class="py-4 flex justify-between">
  <div>
    <h1 class="text-4xl font-bold text-white">Transactions</h1>
    <p class="text-xl text-white">Cash Balance: <%= number_to_currency(@cash_balance) %></p>
  </div>
  <div>
    <%= form_tag transactions_path, method: :get do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search for a stock...", class: 'text-black' %>
    <%= submit_tag "Search", class: "btn-main" %>
    <% end %>
  </div>
</div>

<%= render 'transaction_table' %>
<%= link_to "Buy Stock", stocks_path, class: 'btn-main' %>
<%= link_to "Sell Stock", stocks_path, class: 'btn-main' %>
</div>