<div class="w-full h-screen px-8">
  <div class="mt-8 mb-4 flex justify-between">
    <%= link_to 'Transaction', transactions_path, class: 'text-4xl font-bold text-white' %>
  </div>

  <% if @transactions.present? %>
    <%= render 'transaction_table' %>
  <% else %>
    <p class="text-white text-center italic">There are currently no transactions on record.</p>
  <% end %>
</div>