<div class="w-full px-12 py-8">
<div class="text-white flex justify-between items-center"> 
    <h1 class="font-bold text-4xl">Transactions</h1>
    <div>
    <div>
        <p>Full name:
        <span class="font-bold"><%= @trader.first_name %> <%= @trader.last_name %></span>
        </p>
    </div>
    <div>
        <p>Email address:
        <span class="font-bold"><%= @trader.email %></span>
        </p>
    </div>
    <div>
        <p>Activated: 
        <span class="font-bold"><%= @trader.approved? %></span>
        </p>
    </div>
    </div>
</div>

<% if @transaction.present? %>
<%= render 'transactions' %>
<% else %>
    <div class="text-white text-center italic border-t">
        <p class="mt-4">There are currently no transactions on record.</p>
    </div>
<% end %>
</div>


